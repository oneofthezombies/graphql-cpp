{
  "customizations": {
    "vscode": {
      "extensions": [
        "donjayamanne.githistory",
        "esbenp.prettier-vscode",
        "GraphQL.vscode-graphql-syntax",
        "ms-azuretools.vscode-docker",
        "streetsidesoftware.code-spell-checker",
        "Thinker.sort-json",
        "usernamehw.errorlens",
        "ms-vscode.cmake-tools",
        "llvm-vs-code-extensions.vscode-clangd",
        "twxs.cmake",
        "cheshirekow.cmake-format",
        "vadimcn.vscode-lldb",
        "ms-vscode.cpptools"
      ],
      "settings": {
        "C_Cpp.intelliSenseEngine": "disabled",
        "[cmake]": {
          "editor.defaultFormatter": "cheshirekow.cmake-format",
          "editor.formatOnSave": true
        },
        "[cpp]": {
          "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
          "editor.formatOnSave": true
        },
        "[dockerfile]": {
          "editor.defaultFormatter": "ms-azuretools.vscode-docker",
          "editor.formatOnSave": true
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[jsonc]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[markdown]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[yaml]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "cmake.buildDirectory": "${workspaceFolder}/build",
        "cmake.configureSettings": {
          "CMAKE_CXX_COMPILER": "/opt/llvm/bin/clang++",
          "CMAKE_CXX_EXTENSIONS": "OFF",
          "CMAKE_CXX_FLAGS": "-stdlib=libc++",
          "CMAKE_CXX_STANDARD": "20",
          "CMAKE_CXX_STANDARD_REQUIRED": "ON",
          "CMAKE_C_COMPILER": "/opt/llvm/bin/clang",
          "CMAKE_C_EXTENSIONS": "OFF",
          "CMAKE_C_FLAGS": "-stdlib=libc++",
          "CMAKE_C_STANDARD": "11",
          "CMAKE_C_STANDARD_REQUIRED": "ON",
          "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=lld",
          "CMAKE_MODULE_LINKER_FLAGS": "-fuse-ld=lld",
          "CMAKE_SHARED_LINKER_FLAGS": "-fuse-ld=lld"
        },
        "cmake.enableAutomaticKitScan": false,
        "cmake.generator": "Ninja",
        "cmake.options.statusBarVisibility": "hidden",
        "editor.rulers": [80],
        "files.associations": {
          "*.cc": "cpp",
          "*.h": "cpp"
        },
        "files.eol": "\n",
        "terminal.integrated.defaultProfile.linux": "bash",
        "typescript.inlayHints.enumMemberValues.enabled": true,
        "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
        "typescript.inlayHints.parameterNames.enabled": "all",
        "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
        "typescript.inlayHints.parameterTypes.enabled": true,
        "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
        "typescript.inlayHints.variableTypes.enabled": true,
        "typescript.inlayHints.variableTypes.suppressWhenTypeMatchesName": true
      }
    }
  },
  "dockerComposeFile": "./compose.yaml",
  "overrideCommand": true,
  "postCreateCommand": ".devcontainer/post_create.sh",
  "service": "work",
  "workspaceFolder": "/work"
}
